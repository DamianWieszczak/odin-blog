
<%= form_with model: [ @article, @article.comments.build ] do |form| %>

  <div class="form-group col-6">
    <p>
      <%= form.label :commenter %> (<small>40 characters</small>)<br>
      <%= form.text_field :commenter, class: "form-control form-control-sm" %>
    </p>
    <p>
      <%= form.label :body %> (<small>100 characters</small>)<br>
      <%= form.text_area :body, class: "form-control form-control-sm" %>
    </p>
    <p>
      <%= form.label :status %><br>
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </p>
    <p>
      <%= form.submit class: "btn btn-outline-warning" %>
    </p>
  </div>
<% end %>