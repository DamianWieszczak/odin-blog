<h1>Article Page</h1>

<div class="card text-center mt-4 mb-4">
  <div class="card-header">
    Article
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @article.title%></h5>
    <p class="card-text"><%= @article.body%></p>
    <div class="btn-group">
      <%= link_to "Edit", edit_article_path(@article), class: "badge badge-warning mr-1" %>
      <%= link_to "Back", articles_path, class: "badge badge-primary mr-1" %>
      <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "badge badge-danger" %>
    </div>
  </div>
  <div class="card-footer text-muted">
    Created <%= time_ago_in_words(@article.created_at) %> ago
  </div>
</div>



<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment</h2>
<%= render "comments/form" %>


